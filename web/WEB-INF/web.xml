<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
    <display-name>DALServer Framework Test Configuration (TAP+UWS version)</display-name>
    <description>
      This configuration defines a number of services used to test the DALServer Framework.
    </description>

    <!-- Web-App Context Initialization Parameters. -->

    <context-param>
      <param-name>webAppName</param-name>
      <param-value>dals</param-value>
    </context-param>
    <context-param>
      <param-name>configDir</param-name>
      <param-value>/etc/dals/config</param-value>
    </context-param>
    <context-param>
      <param-name>configFile</param-name>
      <param-value>server.conf</param-value>
    </context-param>
    <context-param>
      <param-name>webAppConfig</param-name>
      <param-value>/WEB-INF/web.xml</param-value>
    </context-param>
    <context-param>
      <param-name>webAppClasses</param-name>
      <param-value>/WEB-INF/classes</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/etc/dals/config/log4j.properties</param-value>
    </context-param>


    <!-- Service Definitions. -->

    <!-- Reload Servlet. -->
    <servlet>
      <servlet-name>reload</servlet-name>
      <servlet-class>dalserver.Config</servlet-class>
      <init-param>
        <param-name>serviceName</param-name>
        <param-value>reload</param-value>
      </init-param>
      <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>reload</servlet-name>
      <url-pattern>/reload</url-pattern>
    </servlet-mapping>


    <!-- Initialization Servlet. -->
    <servlet>
      <servlet-name>startup</servlet-name>
      <servlet-class>dalserver.StartupServlet</servlet-class>
      <init-param>
        <param-name>serviceName</param-name>
        <param-value>startup</param-value>
      </init-param>
      <init-param>
        <param-name>reloadURL</param-name>
        <param-value>http://localhost:8090/dals/reload</param-value>
      </init-param>
      <load-on-startup>99</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>startup</servlet-name>
      <url-pattern>/startup</url-pattern>
    </servlet-mapping>

</web-app>
